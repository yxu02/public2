<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/colorNavy">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Implicit Intent"
              android:textAppearance="@android:style/TextAppearance.Material.Large"
              android:layout_marginTop="24dp" android:textAlignment="center"/>
    <Space android:layout_width="match_parent" android:layout_height="24dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:text="URL: "
                  android:textAlignment="textEnd"
                  android:textAppearance="@android:style/TextAppearance.Material.Large"
                  android:layout_marginRight="2dp"/>
        <EditText android:id="@+id/editText_url"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="textUri"
                  android:hint="URL"
                  android:background="@android:color/white"
                  android:layout_marginRight="10dp"/>
    </LinearLayout>
    <Space android:layout_width="match_parent" android:layout_height="24dp"/>
    <Button android:id="@+id/button_Launch"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Launch" android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:layout_gravity="center" android:onClick="launchOnClick"/>
    <Space android:layout_width="match_parent" android:layout_height="24dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:text="Phone: "
                  android:textAlignment="textEnd"
                  android:textAppearance="@android:style/TextAppearance.Material.Large"
                  android:layout_marginRight="2dp"/>
        <EditText android:id="@+id/editText_phone"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="textUri"
                  android:hint="Phone Number"
                  android:background="@android:color/white"
                  android:layout_marginRight="10dp"/>
    </LinearLayout>
    <Space android:layout_width="match_parent" android:layout_height="24dp"/>
    <Button android:id="@+id/button_Ring"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Ring" android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:layout_gravity="center" android:onClick="ringOnClick"/>
</LinearLayout>