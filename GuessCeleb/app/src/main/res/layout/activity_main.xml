<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="edu.sjsu.xuy87.guessceleb.MainActivity">
    <ImageView android:layout_width="0dp" android:layout_height="0dp"
               app:layout_constraintDimensionRatio="w,1:1" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="48dp" android:layout_marginEnd="48dp"
               app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/imageV"/>
    <Button
            android:text="Button0"
            android:layout_width="0dp" android:tag="0"
            android:layout_height="wrap_content"
            android:id="@+id/button0" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp" android:onClick="selected"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/imageV"/>
    <Button
            android:text="Button1"
            android:layout_width="0dp" android:tag="1"
            android:layout_height="wrap_content"
            android:id="@+id/button1" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp" android:onClick="selected"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/button0"/>
    <Button
            android:text="Button2"
            android:layout_width="0dp" android:tag="2"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp" android:onClick="selected"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/button1"/>
    <Button
            android:text="Button3"
            android:layout_width="0dp" android:tag="3"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp" android:onClick="selected"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/button2"/>

</android.support.constraint.ConstraintLayout>
