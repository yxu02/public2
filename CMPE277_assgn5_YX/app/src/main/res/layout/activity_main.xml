<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:background="@android:color/holo_orange_light"
        android:layout_height="match_parent"
        tools:context="edu.sjsu.xuy87.cmpe277_assgn5_yx.MainActivity">

    <TextView
            android:text="New Products Database" android:textAlignment="center"
            android:layout_width="match_parent" android:textSize="24sp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="51dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:id="@+id/textView"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <Button
            android:text="Insert New Item"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            android:onClick="insertNewItem" android:textSize="18sp"
            android:id="@+id/newItemButton" android:background="@android:color/holo_red_light"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="115dp"
            app:layout_constraintBottom_toTopOf="@+id/searchButton" android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_above="@+id/searchButton" android:layout_centerHorizontal="true"/>
    <Button
            android:text="Search Item"
            android:layout_width="match_parent"
            android:layout_height="64dp" tools:layout_editor_absoluteY="297dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            android:onClick="searchItem" android:background="@android:color/holo_purple"
            android:id="@+id/searchButton" android:layout_marginLeft="32dp" android:layout_marginRight="32dp"
            android:layout_marginBottom="177dp" android:textSize="18sp"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>

</RelativeLayout>
