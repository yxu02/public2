<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:background="@android:color/holo_orange_light"
        android:layout_height="match_parent"
        tools:context="edu.sjsu.xuy87.cmpe277_assgn5_yx.AddItemActivity" android:orientation="vertical">
    <TextView android:layout_width="match_parent" android:layout_margin="48dp" android:textSize="24sp"
              android:layout_height="wrap_content" android:text="Add New Product Item"/>

    <LinearLayout android:layout_width="match_parent" android:layout_margin="8dp"
                  android:orientation="horizontal" android:weightSum="2"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                  android:textAlignment="viewEnd" android:text="Item Name:" android:textSize="18sp" android:padding="16dp"/>
        <EditText android:layout_width="0dp" android:layout_weight="1" android:background="@android:color/white"
                  android:id="@+id/itemName" android:layout_height="36dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_margin="8dp"
                  android:orientation="horizontal" android:weightSum="2"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                  android:textAlignment="viewEnd" android:text="Item Description:" android:textSize="18sp" android:padding="16dp"/>
        <EditText android:layout_width="0dp" android:layout_weight="1" android:background="@android:color/white"
                  android:id="@+id/itemDesc" android:layout_height="36dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_margin="8dp"
                  android:orientation="horizontal" android:weightSum="2"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                  android:textAlignment="viewEnd" android:text="Item Price:" android:textSize="18sp" android:padding="16dp"/>
        <EditText android:layout_width="0dp" android:layout_weight="1" android:background="@android:color/white"
                  android:id="@+id/itemPrice" android:layout_height="36dp" android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_margin="8dp"
                  android:orientation="horizontal" android:weightSum="2"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                  android:textAlignment="viewEnd" android:text="Item Review:" android:textSize="18sp" android:padding="16dp"/>
        <EditText android:layout_width="0dp" android:layout_weight="1" android:background="@android:color/white"
                  android:id="@+id/itemReview" android:layout_height="36dp"/>
    </LinearLayout>
    <Space android:layout_width="match_parent" android:layout_height="32dp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_margin="8dp"
                  android:orientation="horizontal" android:weightSum="2"
                  android:layout_height="wrap_content">
        <Button android:layout_width="0dp" android:layout_height="48dp"
                android:layout_weight="1" android:onClick="addButton"
                android:id="@+id/addButton" android:background="@android:color/holo_green_dark"
                android:text="Add" android:textSize="18sp"
                android:layout_marginRight="16dp" android:layout_marginLeft="16dp"/>
        <Button android:layout_width="0dp" android:layout_height="48dp"
                android:layout_weight="1" android:onClick="cancelButton"
                android:id="@+id/cancelButton" android:background="@android:color/holo_green_dark"
                android:text="Cancel" android:textSize="18sp"
                android:layout_marginRight="16dp" android:layout_marginLeft="16dp"/>
    </LinearLayout>
</LinearLayout>
