<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="edu.sjsu.xuy87.myapplication.DealActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txt_title"
            android:textSize="@dimen/text_size"
            android:inputType="text"
            android:hint="@string/deal_title"
            android:layout_marginRight="@dimen/text_margin" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/text_margin" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/text_margin"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txt_price"
            android:inputType="numberDecimal"
            android:hint="@string/deal_price_in_numbers"
            android:textSize="@dimen/text_size"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_title"
            android:layout_marginRight="@dimen/text_margin" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/text_margin" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/text_margin"/>
    <EditText
            android:inputType="text"
            android:hint="@string/deal_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txt_desc"
            android:textSize="@dimen/text_size"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_price"
            android:layout_marginRight="@dimen/text_margin" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/text_margin" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/text_margin"/>
</android.support.constraint.ConstraintLayout>
