<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
            android:text="Simple Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simple_dialog"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textAlignment="center" android:gravity="center_vertical|center_horizontal"/>
    <Button
            android:text="Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_button"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="10dp" android:layout_marginTop="30dp" android:gravity="center"/>
</RelativeLayout>